{# templates/achat/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails de l'Achat{% endblock %}

{% block body %}
    <h1>Détails de l'Achat</h1>

    <table class="table">
        <tr>
            <th>Date Achat</th>
            <td>{{ achat.dateAchat|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Montant</th>
            <td>{{ achat.montant }}</td>
        </tr>
        <tr>
            <th>Fournisseur</th>
            <td>{{ achat.fournisseur }}</td>
        </tr>
    </table>

    <a href="{{ path('app_achat_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('app_achat_edit', { id: achat.id }) }}" class="btn btn-warning">Éditer</a>
    <a href="{{ path('app_achat_delete', { id: achat.id }) }}" class="btn btn-danger"
       onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet achat ?');">Supprimer</a>
{% endblock %}
