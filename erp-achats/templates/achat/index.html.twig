{# templates/achat/index.html.twig #}

{% extends 'base.html.twig' %}

{% block head %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}

{% block title %}Achats{% endblock %}


{% block body %}
    <h1>Liste des Achats</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date Achat</th>
                <th>Montant</th>
                <th>Fournisseur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for achat in achats %}
                <tr>
                    <td>{{ achat.dateAchat|date('Y-m-d') }}</td>
                    <td>{{ achat.montant }} €</td>
                    <td>{{ achat.fournisseur }}</td>
                    <td>
                        <a href="{{ path('app_achat_show', { id: achat.id }) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('app_achat_edit', { id: achat.id }) }}" class="btn btn-warning">Éditer</a>
                        <a href="{{ path('app_achat_delete', { id: achat.id }) }}" class="btn btn-danger"
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet achat ?');">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun achat trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_achat_new') }}" class="btn btn-success">Ajouter un Achat</a>
{% endblock %}
